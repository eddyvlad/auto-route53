{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ]
}
